{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "public",
    "tests"
  ],
  "lib": [
    "es2015"
  ],
  "include": [
    "**/*.ts"
  ]
}